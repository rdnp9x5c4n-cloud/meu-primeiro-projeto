  <script>
    /* Scripts mínimos: menu, submenu, hamburger, modal e toast */
    (function(){
      const navToggle = document.getElementById('navToggle');
      const mainNav = document.getElementById('main-nav');

      navToggle.addEventListener('click', () => {
        const expanded = navToggle.getAttribute('aria-expanded') === 'true';
        navToggle.setAttribute('aria-expanded', String(!expanded));
        mainNav.classList.toggle('open');
      });

      // submenu toggle (acessível)
      document.querySelectorAll('.has-submenu > .submenu-toggle').forEach(btn => {
        btn.addEventListener('click', (e) => {
          e.preventDefault();
          const parent = btn.parentElement;
          parent.classList.toggle('open-sub');
        });
      });

      // modal helpers
      window.openModal = (selector) => {
        const el = document.querySelector(selector);
        if(!el) return;
        el.setAttribute('aria-hidden','false');
        el.classList.add('open');
      };
      window.closeModal = (selector) => {
        const el = document.querySelector(selector);
        if(!el) return;
        el.setAttribute('aria-hidden','true');
        el.classList.remove('open');
      };

      // toast
      window.showToast = (text, timeout=3000) => {
        const t = document.getElementById('toast');
        t.textContent = text;
        t.classList.add('show');
        clearTimeout(t._timeout);
        t._timeout = setTimeout(()=> t.classList.remove('show'), timeout);
      };

      // simple form validation UI
      document.querySelectorAll('.form-styled').forEach(form => {
        form.addEventListener('submit', (e) => {
          if(!form.checkValidity()){
            e.preventDefault();
            showToast('Preencha os campos correctly', 2500);
            form.classList.add('was-validated');
          } else {
            e.preventDefault();
            showToast('Formulário enviado (simulado)', 2000);
            form.reset();
          }
        });
      });
    })();
  </script>
